    <adminhtml_salesforce_ordercreditmemo_edit>
        <update handle="tnw_salesforce_chosen"/>
    </adminhtml_salesforce_ordercreditmemo_edit>

    <adminhtml_salesforce_ordercreditmemoitem_edit>
        <update handle="tnw_salesforce_chosen"/>
