    <script type="application/javascript">
        (function ($) {
            function moveElement() {
                var copy = $('#tnw-order-info-block > div');
                $('.select2-container', copy).remove();
                copy.clone().insertBefore($('#order-data .order-totals').parent('.box-right'));

                $('script', copy).each(function(index, value){
                    eval(value.innerHTML);
                });
            }

            $(document).ready(moveElement);
            $(document).on("DOMNodeInserted", function (e) {
                if ($(e.target).parent().attr('id') == 'order-data') {
                    moveElement();
                }
            });
        })($j);
